<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.setter.SetterAdvrsFragment">

    <LinearLayout
        android:id="@+id/setter_advert_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/setter_advert_title"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_size_very_medium"
            android:textColor="@color/black"
            android:layout_gravity="center|start"
            android:text="@string/active_adv_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setter_advert_faq"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_margin="@dimen/standard_size_very_medium"
            android:layout_gravity="center|end"
            android:textColor="@color/black"
            android:text="@string/faq_link"
            android:padding="@dimen/standard_size_small"
            android:textStyle="bold"
            android:background="@color/grey_100"
            android:textSize="20sp" />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />
    </LinearLayout>

    <Spinner
        android:id="@+id/setter_advert_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:paddingStart="@dimen/standard_size_very_medium"
        android:paddingEnd="@dimen/standard_size_very_medium"
        android:spinnerMode="dropdown"
        android:background="@color/grey_100"
        />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/grey_500"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/setter_advert_swiper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">
        <ScrollView
            android:id="@+id/setter_list_advert_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/setter_list_advert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/setter_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>