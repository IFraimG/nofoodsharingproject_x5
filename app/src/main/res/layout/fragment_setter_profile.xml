<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.setter.SetterProfileF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/setter_logo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/setter_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Дмитр#й Серге#в*ч *го$ов" />
        <TextView
            android:id="@+id/setter_profile_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Отдающий" />
        <TextView
            android:id="@+id/setter_profile_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20 успешных передач продуктов" />
    </LinearLayout>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/setter_profile_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Включить геолокацию" />
    <include layout="@layout/setter_history_transfer" />
</LinearLayout>