<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/standard_size_very_medium"
        tools:context=".activities.SetterAdvertActivity">
        <ImageView
            android:id="@+id/setter_advert_back"
            android:layout_width="@dimen/size_64"
            android:layout_height="wrap_content"
            android:contentDescription="@string/no_image_warnings"
            app:srcCompat="@drawable/ic_baseline_chevron_left_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/button_navigation_first_first"
            />
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/standard_size_small"
        android:layout_marginBottom="@dimen/standard_size_very_medium"
        android:backgroundTint="@color/grey_light"/>
    <TextView
        android:id="@+id/setter_advert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingStart="@dimen/standard_size_very_medium"
        android:paddingEnd="@dimen/standard_size_very_medium"
        android:text="@string/named_advert_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/standard_size_very_medium"
        android:paddingEnd="@dimen/standard_size_very_medium"
        android:layout_marginTop="@dimen/standard_size_very_medium">
        <TextView
            android:id="@+id/setter_advert_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/name_autor_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/setter_advert_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1"
            android:text="@string/date_text"
            android:textSize="18sp" />
        <Button
            android:id="@+id/setter_advert_create_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_size_very_medium"
            android:layout_marginBottom="@dimen/standard_size_very_medium"
            android:textSize="16sp"
            android:backgroundTint="@color/green_pastel"
            android:text="@string/write_to_getter" />
    </LinearLayout>
    <TextView
        android:id="@+id/setter_advert_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_size_very_medium"
        android:layout_marginBottom="@dimen/standard_size_very_medium"
        android:paddingStart="@dimen/standard_size_very_medium"
        android:paddingEnd="@dimen/standard_size_very_medium"
        android:text="@string/list_product_text"
        android:textSize="32sp" />
    <ListView
        android:id="@+id/setter_advert_product_item_list_products"
        android:paddingStart="@dimen/standard_size_very_medium"
        android:paddingEnd="@dimen/standard_size_very_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/setter_advert_accept"
        android:layout_marginTop="@dimen/standard_size_very_medium"
        android:paddingStart="@dimen/standard_size_very_medium"
        android:paddingEnd="@dimen/standard_size_very_medium"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="@string/message_adv_text"
        android:textSize="18sp"
        app:backgroundTint="@color/green_pastel" />
</LinearLayout>