<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:paddingTop="@dimen/very_big"
    tools:context=".fragments.auth.Setter_Auth_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard_size_small"
        android:paddingEnd="@dimen/standard_size_small"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/auth_setter_signup_back"
            android:layout_width="@dimen/size_64"
            android:layout_height="@dimen/size_48"
            android:contentDescription="@string/no_image_warnings"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/setter_account_text" />
    </LinearLayout>


    <EditText
        android:id="@+id/setter_auth_phone"
        android:hint="@string/write_number_phone_text_hint"
        style="@style/style_auth_edittext"
        android:inputType="phone"
        android:autofillHints=""
        />

    <EditText
        android:id="@+id/setter_auth_login"
        style="@style/style_auth_edittext"
        android:hint="@string/write_name_text_hint"
        android:inputType="text"
        android:autofillHints=""
        />

    <EditText
        android:id="@+id/setter_auth_password"
        style="@style/style_auth_edittext"
        android:hint="@string/write_password_text_hint"
        android:inputType="textPassword"
        android:autofillHints=""
        />
    <Button
        android:layout_marginTop="@dimen/fk_size"
        android:id="@+id/setter_auth_btn_login"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:backgroundTint="@color/green_pastel"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="@string/create_account_text" />

    <TextView
        android:layout_marginTop="@dimen/standard_size_very_medium"
        android:id="@+id/setter_auth_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/save_account_text" />

</LinearLayout>