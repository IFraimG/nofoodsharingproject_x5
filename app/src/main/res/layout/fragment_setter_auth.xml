<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".fragments.auth.Setter_Auth_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/auth_setter_signup_back"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_round_border"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"

            android:layout_gravity="center"
            android:text="Отдающий пользователь" />
    </LinearLayout>


    <EditText
        android:id="@+id/setter_auth_phone"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_round_border"
        android:hint="Введите номер телефона..."
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/setter_auth_login"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_round_border"
        android:hint="Введите имя..."
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/setter_auth_password"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_round_border"
        android:hint="Введите пароль..."
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="50dp"
        />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/setter_auth_btn_login"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:backgroundTint="@color/green_pastel"
        android:layout_gravity="center"
        android:textSize="24dp"
        android:text="Создать аккаунт" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/setter_auth_btn_reg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:backgroundTint="@color/green_pastel"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:text="Уже есть аккаунт? Войдите" />

</LinearLayout>