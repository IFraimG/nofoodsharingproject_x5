<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_size_very_medium"
    android:paddingEnd="@dimen/standard_size_very_medium"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_getter_notify">

    <ProgressBar
        android:id="@+id/getter_notify_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/getter_notify_title"
        style="@style/heading_getter_fragments"
        android:layout_marginStart="@dimen/standard_size_very_medium"
        android:text="@string/notifications_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notify_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getter_notify_title"
        tools:listitem="@layout/item_getter_notifications" />
</androidx.constraintlayout.widget.ConstraintLayout>