<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/setter_advert_item_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="32sp"
        android:layout_margin="10dp"
        android:text="@string/name_enter_text" />

    <TextView
        android:id="@+id/setter_advert_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:text="@string/description_text" />

    <TextView
        android:id="@+id/setter_advert_item_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:textSize="24sp"
        tools:text="Имя нуждающегося" />

    <Button
        android:id="@+id/setter_advert_item_link"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/green_pastel"
        tools:text="Подробнее"
        app:backgroundTint="@color/green_pastel" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>
</LinearLayout>