<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/very_big"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.auth.Getter_Auth_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard_size_small"
        android:paddingEnd="@dimen/standard_size_small"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/auth_getter_signup_back"
            android:layout_width="@dimen/size_64"
            android:layout_height="@dimen/size_48"
            android:contentDescription="@string/no_image_warnings"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="@string/getter_account_text" />
    </LinearLayout>

    <EditText
        android:id="@+id/auth_getter_signup_phone"
        android:hint="@string/number_telephone_text_hint"
        android:inputType="phone"
        android:autofillHints=""
        style="@style/style_auth_edittext"
        />

    <EditText
        android:id="@+id/auth_getter_signup_login"
        android:hint="@string/write_name_text"
        android:inputType="text"
        android:autofillHints=""
        style="@style/style_auth_edittext"
        />

    <EditText
        android:id="@+id/auth_getter_signup_password"
        style="@style/style_auth_edittext"
        android:autofillHints=""
        android:hint="@string/write_password_text"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/auth_getter_create"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/create_new_account_text"
        android:textSize="18sp"
        android:visibility="gone"
        app:backgroundTint="@color/light_orange" />

    <Button
        android:id="@+id/auth_getter_btn_login"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:backgroundTint="@color/light_orange"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="@string/Enter_text" />

</LinearLayout>