<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/fk_size"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/standard_size_very_medium"
        android:layout_marginEnd="@dimen/standard_size_very_medium"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/faq_item_question"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/question"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/faq_item_show"
            android:layout_marginStart="@dimen/standard_size_very_medium"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_add_circle_outline_24" />

        <ImageView
            android:id="@+id/faq_item_remove"
            android:layout_marginStart="@dimen/standard_size_very_medium"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:src="@drawable/baseline_remove_24" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/faq_item_show_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:backgroundTint="@color/grey_100">
        <TextView
            android:id="@+id/faq_item_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fk_size"
            android:layout_marginEnd="@dimen/standard_size_very_medium"
            android:layout_marginTop="@dimen/standard_size_small"
            android:textColor="@color/grey_500"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>