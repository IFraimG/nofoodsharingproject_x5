<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.getter.GetterProfile_Fragment">

    <TextView
        style="@style/heading_getter_fragments"
        android:text="@string/profile_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_text"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:layout_marginTop="40dp"
        android:textColor="@color/grey_500"
        android:id="@+id/getter_profile_login" />

    <TextView
        android:id="@+id/getter_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/phone_number_text"
        android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="4dp"
                app:cardElevation="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_data_text"
                    android:textSize="15sp"
                    android:textColor="@color/grey_500"
                    android:gravity="center"
                    android:id="@+id/getter_profile_title" />

                <EditText
                    android:id="@+id/getter_profile_edit_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:hint="@string/login_hint"
                    android:minHeight="64dp"
                    android:autofillHints=""
                    android:inputType="text"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/getter_profile_edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:minHeight="64dp"
                    android:hint="@string/telephone_hint"
                    android:autofillHints=""
                    android:inputType="phone"
                    android:layout_marginTop="90dp" />
                <EditText
                    android:id="@+id/getter_profile_edit_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:minHeight="64dp"
                    android:layout_marginTop="140dp"
                    android:autofillHints=""
                    android:inputType="textPassword"
                    android:hint="@string/enter_existing_password_hint"/>

                <EditText
                    android:id="@+id/getter_profile_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:minHeight="64dp"
                    android:layout_marginTop="190dp"
                    android:autofillHints=""
                    android:inputType="textPassword"
                    android:hint="@string/new_password_hint"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/getter_profile_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="280dp"
                    android:background="@drawable/style2"
                    android:text="@string/update_profile_data_text"
                    android:layout_gravity="center|bottom"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getter_profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/style1"
        android:text="@string/exit_from_account_text"
        android:textSize="14sp"
        />
</LinearLayout>