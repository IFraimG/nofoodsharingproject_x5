<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.getter.GetterProfile_Fragment">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:background="@drawable/style5"
            android:textSize="25sp"
            android:textColor="@color/grey_500"
            android:text="@string/profile_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_text"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:id="@+id/getter_profile_login" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер телефона"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:id="@+id/getter_profile_phone" />
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="4dp"
                app:cardElevation="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Редактировать профиль"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:id="@+id/getter_profile_title" />

                <EditText
                    android:id="@+id/getter_profile_edit_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:hint="Логин"
                    android:textColorLink="@color/green_pastel"
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/getter_profile_edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:hint="Телефон"
                    android:layout_marginTop="140dp" />
                <EditText
                    android:id="@+id/getter_profile_edit_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_marginTop="220dp"
                    android:hint="Введите существующий пароль"/>
                <EditText
                    android:id="@+id/getter_profile_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_marginTop="300dp"
                    android:hint="Новый пароль"/>
                <Button
                    android:id="@+id/getter_profile_save"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textSize="18sp"
                    android:layout_marginTop="380dp"
                    android:backgroundTint="@color/green_pastel"
                    android:gravity="center"
                    android:text="Обновить данные профиля"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <Button
            android:id="@+id/getter_profile_logout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/style1"
            android:text="@string/exit_from_account_text"
            android:textSize="16sp"
            app:backgroundTint="@color/material_dynamic_neutral_variant40" />

</LinearLayout>