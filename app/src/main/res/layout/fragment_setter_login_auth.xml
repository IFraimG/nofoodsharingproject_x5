<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/very_big"
    tools:context=".presentation.fragments.auth.SetterLoginAuthFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/auth_setter_login_back"
            android:layout_width="@dimen/size_64"
            android:layout_height="@dimen/size_48"
            android:contentDescription="@string/no_image_warnings"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/enter_to_getter_text" />
    </LinearLayout>
    <EditText
        android:id="@+id/auth_setter_login_login"
        android:hint="@string/write_name_text"
        android:autofillHints=""
        android:maxLength="20"
        android:inputType="text"
        style="@style/style_auth_edittext"
        />

    <EditText
        android:id="@+id/auth_setter_login_password"
        style="@style/style_auth_edittext"
        android:hint="@string/write_password_text"
        android:paddingStart="@dimen/standard_size_very_medium"
        android:paddingEnd="@dimen/standard_size_very_medium"
        android:maxLength="30"
        android:autofillHints=""
        android:inputType="textPassword"
        />

    <com.buyhelp.nofoodsharingproject.presentation.views.CustomAppCompatButton
        android:layout_marginTop="@dimen/fk_size"
        android:id="@+id/login_auth_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:backgroundTint="@color/green_pastel"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="@string/enter_text" />
</LinearLayout>