<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".fragments.auth.Setter_LoginAuth_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/auth_setter_login_back"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:contentDescription="@string/no_image_warnings"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/enter_to_getter_text" />
    </LinearLayout>
    <EditText
        android:id="@+id/auth_setter_login_login"
        android:hint="@string/write_name_text"
        android:autofillHints=""
        android:inputType="text"
        style="@style/style_auth_edittext"
        />

    <EditText
        android:id="@+id/auth_setter_login_password"
        style="@style/style_auth_edittext"
        android:hint="@string/write_password_text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:autofillHints=""
        android:inputType="textPassword"
        />

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/login_auth_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:backgroundTint="@color/green_pastel"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="@string/enter_text" />
</LinearLayout>