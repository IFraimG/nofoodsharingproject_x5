<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/item_recycler_style"
    android:layout_marginTop="@dimen/standard_size_medium"
    android:padding="@dimen/standard_size_small"
    android:orientation="vertical">
    <TextView
        android:id="@+id/notify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_advert_text"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/notify_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Id_now_what_is_it_text"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/notify_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_size_medium"
        android:layout_marginBottom="@dimen/standard_size_little"
        android:text="@string/notyfy_description"
        android:textSize="16sp"/>
</LinearLayout>