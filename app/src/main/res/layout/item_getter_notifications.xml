<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/item_recycler_style"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/notify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_advert_text"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/notify_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Id_now_what_is_it_text"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/notify_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/notyfy_description"
        android:textSize="18sp"/>
</LinearLayout>