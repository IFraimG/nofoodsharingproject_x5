<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" android:color="@color/new_custom_green_active">
            <shape
                android:shape="rectangle">
                <corners
                    android:radius="@dimen/standard_size_small">
                </corners>
                <solid android:color="@color/new_custom_green_active"/>
                <stroke
                    android:width="2dp"
                    android:color="@color/new_custom_green_active" >
                </stroke>
            </shape>
        </item>
        <item android:color="@color/new_custom_green_dark">
            <shape
                android:shape="rectangle">
                <corners
                    android:radius="@dimen/standard_size_small">
                </corners>
                <solid android:color="@color/new_custom_green_dark"/>
                <stroke
                    android:width="2dp"
                    android:color="@color/new_custom_green_dark" >
                </stroke>
            </shape>
        </item>
    </selector>