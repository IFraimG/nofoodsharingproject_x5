<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/new_grey" >
            </solid>

            <stroke
                android:width="2dp"
                android:color="@color/new_grey" >
            </stroke>

            <corners
                android:radius="@dimen/standard_size_small">
            </corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >

            <solid
                android:color="@color/grey_100" >
            </solid>

            <stroke
                android:width="2dp"
                android:color="@color/custom_grey" >
            </stroke>

            <corners
                android:radius="@dimen/standard_size_small">
            </corners>

        </shape>
    </item>
</selector>