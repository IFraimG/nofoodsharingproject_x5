<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="grey_500_button" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/style1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">@dimen/standard_size_very_medium</item>
        <item name="android:layout_marginLeft">@dimen/standard_size_very_medium</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_recycler_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:background">@drawable/style2</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">@dimen/standard_size_very_medium</item>
        <item name="android:layout_marginLeft">@dimen/standard_size_very_medium</item>
    </style>

    <style name="heading_getter_fragments" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_size_very_medium</item>
        <item name="android:layout_marginEnd">@dimen/standard_size_very_medium</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_auth_edittext" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/custom_round_border</item>
        <item name="android:paddingLeft">@dimen/standard_size_very_medium</item>
        <item name="android:layout_marginTop">@dimen/very_big</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>